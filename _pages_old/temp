
import React, { useState, useEffect, useRef } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { SafeImage } from '../components';
import { imageLocal } from '../data';
import { 
  ArrowRight, 
  X, 
  HelpCircle, 
  AlertTriangle, 
  PenTool, 
  TrendingUp, 
  CheckCircle2,
  Layers,
  Ruler,
  Maximize2,
  FileCheck,
  Compass,
  CornerDownRight
} from 'lucide-react';

export const MosaicItem: React.FC<{ 
  project: any; 
  onOpen: (p: any) => void; 
  height: string; 
  width: string;
  offsetY?: string;
  isBottomRow?: boolean;
}> = ({ project, onOpen, height, width, offsetY = "0px", isBottomRow = false }) => {
  return (
    <motion.div 
      className="relative flex-none overflow-visible group cursor-pointer"
      style={{ 
        height, 
        width,
        zIndex: isBottomRow ? 10 : 20,
      }}
      onClick={() => onOpen(project)}
      whileHover={{ 
        zIndex: 100,
        scale: 1.05,
        transition: { duration: 0.4, ease: [0.33, 1, 0.68, 1] }
      }}
    >
      <motion.div 
        className="w-full h-full overflow-hidden border-[0.5px] border-black/5 shadow-md group-hover:shadow-[0_30px_60px_-15px_rgba(0,0,0,0.3)] transition-shadow duration-500 relative bg-stone-100"
        style={{ translateY: offsetY }}
      >
        <SafeImage localSrc={imageLocal(project.image)} fallbackSrc={project.image} alt={project.title} className="w-full h-full object-cover grayscale-[0.4] group-hover:grayscale-0 transition-all duration-1000 scale-105 group-hover:scale-115" />
        
        <div className="absolute inset-0 p-10 flex flex-col justify-between opacity-0 group-hover:opacity-100 transition-all duration-700 bg-black/50 backdrop-blur-[2px]">
          <div className="flex justify-between items-start">
            <span className="mono text-[10px] text-white uppercase tracking-[0.5em] font-black bg-white/10 px-3 py-1">Archive_{project.id}</span>
            <div className="w-14 h-14 bg-amber-600 rounded-full flex items-center justify-center text-white shadow-2xl">
              <ArrowRight size={24} className="-rotate-45" />
            </div>
          </div>
          <div>
            <h4 className="text-white text-5xl font-serif italic mb-2 leading-none tracking-tighter">{project.title}</h4>
            <p className="mono text-[10px] text-amber-400 uppercase tracking-[0.4em] font-black">{project.location}</p>
          </div>
        </div>
      </motion.div>
      <div className="absolute inset-0 bg-amber-600/5 blur-[100px] opacity-0 group-hover:opacity-100 transition-opacity -z-10 pointer-events-none" />
    </motion.div>
  );
};

const SidebarItem: React.FC<{ type: string; text: string }> = ({ type, text }) => {
  const getIcon = () => {
    const iconProps = { size: 22, className: "text-amber-600 shrink-0" };
    switch (type) {
      case 'vraag': return <HelpCircle {...iconProps} />;
      case 'pijn': return <AlertTriangle {...iconProps} />;
      case 'oplossing': return <PenTool {...iconProps} />;
      case 'opbrengst': return <TrendingUp {...iconProps} />;
      default: return null;
    }
  };

  const getLabel = () => {
    switch (type) {
      case 'vraag': return "HET VERTREKPUNT";
      case 'pijn': return "DE UITDAGING";
      case 'oplossing': return "DE INGREEP";
      case 'opbrengst': return "HET RESULTAAT";
      default: return "";
    }
  };

  return (
    <motion.div 
      initial={{ opacity: 0, y: 10 }}
      animate={{ opacity: 1, y: 0 }}
      className="py-6 border-b border-stone-100 last:border-0 group/item"
    >
      <div className="space-y-3">
        <div className="flex items-center gap-4">
          {getIcon()}
          <div className="space-y-1">
            <span className="mono text-[10px] uppercase tracking-[0.3em] font-black text-stone-900">{getLabel()}</span>
            <div className="w-8 h-1 bg-amber-600 group-hover/item:w-16 transition-all duration-500" />
          </div>
        </div>
        <p className="text-stone-800 text-[15px] leading-relaxed font-light italic pr-4">
          {text}
        </p>
      </div>
    </motion.div>
  );
};

export const ProjectDetailOverlay: React.FC<{ project: any; onClose: () => void }> = ({ project, onClose }) => {
  const [activePhases, setActivePhases] = useState<string[]>(['diagnose']);
  const snapshot = project?.snapshot;

  const diagnoseRef = useRef(null);
  const ingreepRef = useRef(null);
  const resultaatRef = useRef(null);
  const archiveRef = useRef(null);

  useEffect(() => {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const phase = entry.target.getAttribute('data-phase');
            if (phase && !activePhases.includes(phase)) {
              setActivePhases(prev => [...new Set([...prev, phase])]);
            }
          }
        });
      },
      { threshold: 0.1, rootMargin: "0px 0px -20% 0px" }
    );

    if (diagnoseRef.current) observer.observe(diagnoseRef.current);
    if (ingreepRef.current) observer.observe(ingreepRef.current);
    if (resultaatRef.current) observer.observe(resultaatRef.current);
    if (archiveRef.current) observer.observe(archiveRef.current);

    return () => observer.disconnect();
  }, [activePhases]);

  if (!project) return null;

  const getGridSpan = (index: number) => {
    const patterns = [
      "md:col-span-8 md:row-span-2",
      "md:col-span-4 md:row-span-2",
      "md:col-span-6 md:row-span-1",
      "md:col-span-6 md:row-span-1",
      "md:col-span-12 md:row-span-2",
    ];
    return patterns[index % patterns.length];
  };

  return (
    <motion.div 
      initial={{ opacity: 0 }} 
      animate={{ opacity: 1 }} 
      exit={{ opacity: 0 }} 
      className="fixed inset-0 z-[250] bg-white overflow-y-auto scroll-smooth selection:bg-amber-100"
    >
      {/* FLOATING SIDEBAR DOSSIER */}
      <div className="fixed left-6 top-6 bottom-6 md:left-10 md:top-10 md:bottom-10 w-[400px] hidden lg:flex flex-col z-[300] pointer-events-none">
        <motion.div 
          initial={{ x: -50, opacity: 0 }}
          animate={{ x: 0, opacity: 1 }}
          className="bg-white/95 backdrop-blur-xl h-full w-full flex flex-col p-10 shadow-[30px_0_80px_-20px_rgba(0,0,0,0.1)] relative pointer-events-auto rounded-sm border-r border-stone-100"
        >
          <div className="mb-8">
            <div className="space-y-3">
              <span className="mono text-[10px] uppercase tracking-[0.4em] text-amber-600 font-black block">ARCHIEF _ ANALYSE</span>
              <h2 className="text-5xl font-serif italic text-black leading-[0.85] tracking-tighter">Analyse &<br/>Conclusie</h2>
              <div className="w-16 h-1 bg-amber-600" />
            </div>
          </div>

          <div className="flex-1 space-y-1 overflow-hidden pr-2">
            <SidebarItem type="vraag" text={snapshot?.logic.find((l:any) => l.type === 'vraag')?.text || ""} />
            <SidebarItem type="pijn" text={snapshot?.logic.find((l:any) => l.type === 'pijn')?.text || ""} />

            {activePhases.includes('ingreep') && (
              <SidebarItem type="oplossing" text={snapshot?.logic.find((l:any) => l.type === 'oplossing')?.text || ""} />
            )}

            {activePhases.includes('resultaat') && (
              <>
                <SidebarItem type="opbrengst" text={snapshot?.logic.find((l:any) => l.type === 'opbrengst')?.text || ""} />
                <motion.div 
                  initial={{ opacity: 0 }} 
                  animate={{ opacity: 1 }} 
                  className="pt-6 mt-4 border-t border-stone-100"
                >
                  <span className="mono text-[9px] uppercase tracking-[0.3em] text-stone-400 font-black block mb-3">KERNBODSCHAP</span>
                  <p className="text-xl font-serif italic font-bold text-black leading-tight">
                    "{snapshot?.idea || project.description}"
                  </p>
                </motion.div>
              </>
            )}
          </div>

          <div className="mt-8">
            <button 
              onClick={() => { onClose(); setTimeout(() => document.getElementById('footer-contact')?.scrollIntoView({ behavior: 'smooth' }), 100); }}
              className="w-full bg-amber-600 text-white p-6 hover:bg-black transition-all group flex items-center justify-between shadow-xl rounded-sm"
            >
              <div className="text-left leading-none">
                <span className="mono text-[9px] uppercase tracking-[0.3em] font-black block mb-1.5 opacity-90">ADVIES_AANVRAAG</span>
                <span className="text-[14px] font-serif italic font-black uppercase tracking-[0.1em]">DIRECT_CONTACT</span>
              </div>
              <ArrowRight size={18} className="group-hover:translate-x-1.5 transition-transform" />
            </button>
          </div>
        </motion.div>
      </div>

      <div className="relative">
        <button 
          onClick={onClose} 
          className="fixed top-10 right-10 z-[400] w-14 h-14 bg-black text-white rounded-full flex items-center justify-center hover:bg-amber-600 hover:scale-110 transition-all shadow-2xl"
        >
          <X size={28} strokeWidth={2.5} />
        </button>

        {/* Phase 01: Hero */}
        <section data-phase="diagnose" ref={diagnoseRef} className="h-screen relative w-full overflow-hidden">
          <SafeImage localSrc={imageLocal(project.image)} fallbackSrc={project.image} className="w-full h-full object-cover" alt={project.title} />
          <div className="absolute inset-0 bg-black/10" />
          <div className="absolute bottom-12 right-12 bg-white p-8 shadow-2xl flex gap-12 border border-stone-100 rounded-sm">
            <div className="space-y-1.5">
              <span className="mono text-[9px] uppercase tracking-widest text-stone-400 font-black">LOCATIE</span>
              <p className="text-xl font-serif italic font-bold text-black">{project.location}</p>
            </div>
            <div className="w-px h-full bg-stone-100" />
            <div className="space-y-1.5">
              <span className="mono text-[9px] uppercase tracking-widest text-stone-400 font-black">TYPE</span>
              <p className="text-xl font-serif italic font-bold text-black uppercase">{project.tag.split(' ')[1] || project.tag}</p>
            </div>
          </div>
        </section>

        {/* Phase 02: Ingreep */}
        <section data-phase="ingreep" ref={ingreepRef} className="py-64 lg:pl-[460px] px-12 md:px-32 bg-white">
          <div className="max-w-6xl mx-auto space-y-32">
            <div className="grid grid-cols-1 md:grid-cols-2 gap-24 items-center">
              <div className="space-y-16">
                <div className="space-y-6">
                  <span className="mono text-amber-800 text-xs tracking-[1em] block uppercase font-black">02 / De Ingreep</span>
                  <h3 className="text-7xl font-serif italic text-black leading-[0.9] tracking-tighter">Strategische <br/>verbinding.</h3>
                </div>
                <p className="text-3xl text-stone-800 font-light leading-relaxed italic border-l-4 border-amber-600 pl-12">
                  "{project.description}"
                </p>
                <div className="flex gap-12 pt-8">
                  <div className="flex items-center gap-6 text-stone-900"><Layers size={24} className="text-amber-600" /> <span className="mono text-xs uppercase tracking-widest font-black">Licht & Schaduw</span></div>
                  <div className="flex items-center gap-6 text-stone-900"><Ruler size={24} className="text-amber-600" /> <span className="mono text-xs uppercase tracking-widest font-black">Zichtlijnen</span></div>
                </div>
              </div>
              <div className="aspect-square bg-stone-50 overflow-hidden shadow-2xl relative rounded-sm group">
                <SafeImage localSrc={imageLocal(project.gallery[1])} fallbackSrc={project.gallery[1]} className="w-full h-full object-cover grayscale-[0.2] group-hover:grayscale-0 group-hover:scale-110 transition-all duration-1000" />
              </div>
            </div>
          </div>
        </section>

        {/* Phase 03: Resultaat */}
        <section data-phase="resultaat" ref={resultaatRef} className="py-64 lg:pl-[460px] px-12 md:px-32 bg-stone-50">
          <div className="max-w-6xl mx-auto space-y-24">
            <div className="space-y-12">
              <span className="mono text-amber-800 text-xs tracking-[1em] block uppercase font-black">03 / Resultaat</span>
              <h4 className="text-7xl font-serif italic text-black tracking-tighter leading-none">Kwaliteit in elke mÂ².</h4>
            </div>
            
            <div className="grid grid-cols-1 md:grid-cols-3 gap-8">
              {snapshot?.yield.map((y: string, i: number) => (
                <motion.div 
                  initial={{ opacity: 0, y: 20 }}
                  whileInView={{ opacity: 1, y: 0 }}
                  key={i} 
                  className="bg-white p-12 border border-stone-100 shadow-sm flex flex-col justify-between min-h-[250px] rounded-sm"
                >
                  <CheckCircle2 size={32} className="text-amber-600" />
                  <span className="text-2xl font-serif italic text-stone-950 leading-tight">{y}</span>
                </motion.div>
              ))}
            </div>
          </div>
        </section>

        {/* Visueel Archief */}
        <section data-phase="archive" ref={archiveRef} className="py-64 lg:pl-[460px] px-12 md:px-32 bg-white">
          <div className="max-w-6xl mx-auto space-y-24">
            <div className="flex flex-col md:flex-row justify-between items-end gap-12">
               <div className="space-y-6">
                 <span className="mono text-stone-400 text-xs tracking-[1em] block uppercase font-black">Archive / Details</span>
                 <h4 className="text-7xl font-serif italic text-black tracking-tighter leading-none">Visueel <br/>Archief.</h4>
                 <div className="w-24 h-1 bg-amber-600 mt-2" />
               </div>
               <p className="text-stone-500 font-light italic max-w-sm">
                 Een volledige documentatie van het project. Verken de materialisatie en details door de ogen van de architect.
               </p>
            </div>

            <div className="grid grid-cols-1 md:grid-cols-12 gap-8 auto-rows-[300px] md:auto-rows-[400px]">
              {project.gallery.map((img: string, idx: number) => (
                <motion.div 
                  key={idx}
                  whileHover={{ scale: 0.98 }}
                  className={`${getGridSpan(idx)} relative overflow-hidden group shadow-xl bg-stone-100 rounded-sm`}
                >
                  <SafeImage 
                    localSrc={imageLocal(img)} 
                    fallbackSrc={img} 
                    className="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-105" 
                  />
                  <div className="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity" />
                  <div className="absolute bottom-6 left-6 flex items-center gap-3">
                    <span className="mono text-[10px] text-white font-bold tracking-widest uppercase bg-black/40 px-3 py-1 backdrop-blur-sm">
                      Dossier_IMG_{String(idx + 1).padStart(2, '0')}
                    </span>
                  </div>
                </motion.div>
              ))}
            </div>
          </div>
        </section>

        {/* GEREVISEERDE FINALE FOOTER - PROJECT SIGN-OFF */}
        <section className="py-64 lg:pl-[460px] bg-stone-950 relative overflow-hidden">
           {/* Blueprint grid effect */}
           <div className="absolute inset-0 arch-grid opacity-5 pointer-events-none" />
           
           <div className="max-w-5xl mx-auto px-8 relative z-10 flex flex-col items-center">
              <motion.div 
                initial={{ opacity: 0, scale: 0.8, rotate: -15 }}
                whileInView={{ opacity: 0.15, scale: 1, rotate: -10 }}
                className="absolute top-10 right-10 pointer-events-none"
              >
                <div className="border-8 border-amber-600 p-8 rounded-full flex flex-col items-center justify-center">
                  <span className="mono text-4xl font-black text-amber-600 uppercase">Approved</span>
                  <span className="mono text-xl text-amber-600">JULES_ZWIJSEN</span>
                </div>
              </motion.div>

              <div className="text-center space-y-12 mb-32">
                 <div className="flex items-center justify-center gap-6 mb-8">
                    <div className="h-px w-12 bg-amber-600/50" />
                    <FileCheck className="text-amber-500" size={32} />
                    <div className="h-px w-12 bg-amber-600/50" />
                 </div>
                 
                 <span className="mono text-amber-500 text-sm tracking-[1.2em] uppercase font-black block">EINDE_DOSSIER</span>
                 <h4 className="text-white text-6xl md:text-[8vw] font-serif italic leading-[0.85] tracking-tighter">
                    Vertaal uw droom <br/> naar <span className="text-stone-400">architectuur.</span>
                 </h4>
              </div>

              {/* Project Specs Recap */}
              <div className="w-full grid grid-cols-1 md:grid-cols-3 gap-8 mb-32 border-t border-b border-white/10 py-16">
                 <div className="space-y-4 text-center md:text-left">
                    <span className="mono text-[10px] uppercase tracking-widest text-stone-500 font-bold">RECAP / LOCATIE</span>
                    <p className="text-2xl font-serif italic text-white">{project.location}</p>
                 </div>
                 <div className="space-y-4 text-center">
                    <span className="mono text-[10px] uppercase tracking-widest text-stone-500 font-bold">RECAP / JAAR</span>
                    <p className="text-2xl font-serif italic text-white">{project.year}</p>
                 </div>
                 <div className="space-y-4 text-center md:text-right">
                    <span className="mono text-[10px] uppercase tracking-widest text-stone-500 font-bold">RECAP / VOLUME</span>
                    <p className="text-2xl font-serif italic text-white">{project.area}</p>
                 </div>
              </div>

              {/* Final Action Button */}
              <motion.button 
                onClick={onClose}
                whileHover={{ scale: 1.05 }}
                whileTap={{ scale: 0.95 }}
                className="group relative px-24 py-10 bg-white text-black overflow-hidden rounded-sm"
              >
                <div className="absolute inset-0 bg-amber-600 translate-y-full group-hover:translate-y-0 transition-transform duration-500" />
                <div className="relative z-10 flex items-center gap-6">
                  <span className="mono text-sm uppercase tracking-[0.5em] font-black group-hover:text-white transition-colors">Dossier Sluiten</span>
                  <div className="w-px h-6 bg-black/10 group-hover:bg-white/20 transition-colors" />
                  <CornerDownRight size={20} className="group-hover:text-white transition-colors" />
                </div>
              </motion.button>
              
              <div className="mt-16 flex items-center gap-4 text-stone-600">
                <Compass size={16} className="animate-spin-slow" />
                <span className="mono text-[9px] uppercase tracking-[0.3em] font-black">NAVIGEREN_NAAR_OVERZICHT</span>
              </div>
           </div>
        </section>
      </div>
    </motion.div>
  );
};
